<install type="module" version="1.5">
	<name>Quick Tips</name>
	<author>Shawn Rice</author>
	<copyright>Copyright 2005-2011 Purdue University. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/lgpl-3.0.html LGPLv3</license>
	<description>This module shows a quick "tip of the day" or "did you know..." feature.</description>
	<files>
		<filename module="mod_quicktips">mod_quicktips.php</filename>
		<filename>mod_quicktips.xml</filename>
		<filename>index.html</filename>
		<filename>tmpl/index.html</filename>
		<filename>tmpl/default.php</filename>
	</files>
	<params>
		<param name="catid" type="text" default="" label="Category" description="The category to pull entries from." />
		<param name="secid" type="text" default="" label="Section" description="The section to pull entries from." />
		<param name="moduleclass_sfx" type="text" default="" label="Module class" description="A class to be applied for styling." />
		<param name="method" type="list" default="newest" label="Order" description="The method by which entries are to be displayed.">
			<option value="newest">Newest</option>
			<option value="ordering">Ordered</option>
			<option value="random">Random</option>
		</param>
	</params>
</install>

