<install type="module" version="1.5">
	<name>My Favorites</name>
	<author>HUBzero</author>
	<copyright>Copyright 2005-2011 Purdue University. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/lgpl-3.0.html LGPLv3</license>
	<description>This module will display a list of favorites chosen by the user</description>
	<files>
		<filename module="mod_myfavorites">mod_myfavorites.php</filename>
		<filename>index.html</filename>
        	<filename>tmpl/index.html</filename>
        	<filename>tmpl/default.php</filename>
		<filename>mod_myfavorites.css</filename>
		<filename>images/heart.png</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.mod_myfavorites.ini</language>
	</languages>
	<params>
		<param name="moduleclass" type="text" default="" label="Module class" description="A CSS class to be applied to the module, this allows individual module styling" />
		<param name="limit" type="text" default="5" label="# to display" description="The number of items to display." />
	</params>
</install>

