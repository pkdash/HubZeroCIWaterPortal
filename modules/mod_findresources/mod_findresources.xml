<install type="module" version="1.5.0">
	<name>Find Resources</name>
	<author>HUBzero</author>
	<creationDate>Sep 2009</creationDate>
	<copyright>Copyright 2005-2011 Purdue University. All rights reserved.</copyright>
	<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
	<authorEmail>alisa@purdue.edu</authorEmail>
	<version>1.5.0</version>
	<description>Module to display resources search, popular tags and categories.</description>
	<files>
		<filename module="mod_findresources">mod_findresources.php</filename>
		<filename>tmpl/default.php</filename>
		<filename>tmpl/index.html</filename>
		<filename>mod_findresources.xml</filename>
		<filename>index.html</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.mod_findresources.ini</language>
	</languages>
	<params>
		<param name="cssId" type="text" default="findresources" label="Module ID" description="An ID to be applied to the css of the module container, this allows individual module styling" />
		<param name="limit" type="text" default="25" label="Number of Tags" description="The number of tags to display." />
		<param name="cache" type="radio" default="0" label="Enable Cache" description="Select whether to cache the content of this module">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="cache_time" type="text" default="15" label="Cache Time" description="The time before the module is recached" />
	</params>
</install>

