<install type="component" version="1.5">
	<name>Topics</name>
	<author>HUBzero</author>
	<copyright>Copyright 2005-2011 Purdue University. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/lgpl-3.0.html LGPLv3</license>
	<description>Manage Topics</description>
	<files>
		<filename>router.php</filename>
		<filename>topics.css</filename>
		<filename>topics.php</filename>
		<filename>index.html</filename>
		<filename>images/author.gif</filename>
		<filename>images/comment.gif</filename>
		<filename>images/draft.gif</filename>
		<filename>images/tabs_bg.gif</filename>
		<filename>images/tabs.png</filename>
		<filename>images/extlink.gif</filename>
		<filename>images/missinglink.gif</filename>
		<filename>images/icons/asf.png</filename>
		<filename>images/icons/asx.png</filename>
		<filename>images/icons/avi.png</filename>
		<filename>images/icons/dmg.png</filename>
		<filename>images/icons/doc.png</filename>
		<filename>images/icons/folder.gif</filename>
		<filename>images/icons/gif.png</filename>
		<filename>images/icons/html.png</filename>
		<filename>images/icons/jpg.png</filename>
		<filename>images/icons/mov.png</filename>
		<filename>images/icons/pdf.png</filename>
		<filename>images/icons/pps.png</filename>
		<filename>images/icons/ppt.png</filename>
		<filename>images/icons/rar.png</filename>
		<filename>images/icons/swf.png</filename>
		<filename>images/icons/tiff.png</filename>
		<filename>images/icons/trash.gif</filename>
		<filename>images/icons/txt.png</filename>
		<filename>images/icons/unknown.png</filename>
		<filename>images/icons/wmv.png</filename>
		<filename>images/icons/xls.png</filename>
		<filename>images/icons/zip.png</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.com_topics.ini</language>
        </languages>
	<administration>
	 	<files>
		</files>
	</administration>

	<params>
		<param name="show_author" type="radio" default="1" label="Authors" description="Show/Hide the list of authors">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="show_tags" type="radio" default="1" label="Tags" description="Show/Hide the item's tags">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="show_rating" type="radio" default="1" label="Rating" description="Show/Hide the rating">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="show_date" type="list" default="1" label="Date" description="Show/Hide the modified date">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="show_history" type="list" default="1" label="History" description="Show/Hide the revision history">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="allow_comments" type="list" default="1" label="Comments" description="Allow/Disallow comments">
			<option value="0">Disallow</option>
			<option value="1">Allow</option>
		</param>
	</params>

</install>

