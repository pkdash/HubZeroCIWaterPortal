<install version="1.5" type="plugin" group="groups">
	<name>Groups - Forum</name>
	<author>Shawn Rice</author>
	<copyright>Copyright 2005-2009 by Purdue Research Foundation, West Lafayette, IN 47906</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GPLv2</license>
	<description>Display and manage a forum for a specific group</description>
	<files>
		<filename plugin="forum">forum.php</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.plg_groups_forum.ini</language>
	</languages>
	<params>
		<param name="plugin_access" type="list" default="members" label="Default Plugin Access" description="Default access level assigned to the blog plugin.">
			<option value="anyone">Any HUB Visitor</option>
			<option value="registered">Only Registered HUB Users</option>
			<option value="members">Only Group Members</option>
			<option value="nobody">Disabled/Off</option>
		</param>
		<param name="filepath" type="text" default="/site/forum" label="File path" description="The path to store uploaded files to."/>
	</params>
</install>