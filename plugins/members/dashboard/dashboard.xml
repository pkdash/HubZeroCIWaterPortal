<extension version="1.5" type="plugin" group="members">
	<name>Members - Blog</name>
	<author>Shawn Rice</author>
	<creationDate>December 2009</creationDate>
	<copyright>Copyright 2005-2011 Purdue University. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/lgpl-3.0.html LGPLv3</license>
	<authorEmail>zooley@purdue.edu</authorEmail>
	<version>1.5</version>
	<description>Display a dashboard</description>
	<files>
		<filename plugin="dashboard">dashboard.php</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.plg_members_dashboard.ini</language>
		<language tag="en-GB">en-GB.plg_members_dashboard.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="allow_customization" type="radio" default="0" label="Allow Customization" description="Allow users to customize the page or not">
					<option value="0">Yes</option>
					<option value="1">No</option>
				</field>
				<field name="position" type="text" menu="hide" label="Module position" default="myhub" description="The module position to use to gather draggable modules" />
				<field name="defaults" type="text" menu="hide" label="Defaults" default="" description="The default list of modules to show" />
				<field name="static" type="text" menu="hide" label="Static" default="" description="Modules that cannot be removed by the user." />
			</fieldset>
		</fields>
	</config>
</extension>
