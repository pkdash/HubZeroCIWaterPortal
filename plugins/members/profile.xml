<install version="1.5" type="plugin" group="members">
	<name>Members - Profile</name>
	<author>Christopher Smoak</author>
	<copyright>Copyright 2005-2011 Purdue University. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/lgpl-3.0.html LGPLv3</license>
	<description>Display a member's Profile</description>
	<files>
		<filename plugin="profile">profile.php</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.plg_members_profile.ini</language>
	</languages>
	<params>
		<param name="access_org" type="list" default="0" label="Organization" description="Show/Hide the user organization">
			<option value="0">Public</option>
			<option value="1">Registered users</option>
			<option value="2">Private</option>
		</param>
		<param name="access_orgtype" type="list" default="0" label="Organization type" description="Show/Hide the user organization type">
			<option value="0">Public</option>
			<option value="1">Registered users</option>
			<option value="2">Private</option>
		</param>
		<param name="access_email" type="list" default="2" label="Email" description="Show/Hide the user email">
			<option value="0">Public</option>
			<option value="1">Registered users</option>
			<option value="2">Private</option>
		</param>
		<param name="access_url" type="list" default="0" label="Website" description="Show/Hide the user website">
			<option value="0">Public</option>
			<option value="1">Registered users</option>
			<option value="2">Private</option>
		</param>
		<param name="access_phone" type="list" default="2" label="Phone" description="Show/Hide the user phone">
			<option value="0">Public</option>
			<option value="1">Registered users</option>
			<option value="2">Private</option>
		</param>
		<param name="access_tags" type="list" default="0" label="Tags" description="Show/Hide the user tags">
			<option value="0">Public</option>
			<option value="1">Registered users</option>
			<option value="2">Private</option>
		</param>
		<param name="access_bio" type="list" default="0" label="Bio" description="Show/Hide the user bio">
			<option value="0">Public</option>
			<option value="1">Registered users</option>
			<option value="2">Private</option>
		</param>
		<param name="access_countryorigin" type="list" default="0" label="Country of Citizenship" description="Show/Hide the user country of citizenship">
			<option value="0">Public</option>
			<option value="1">Registered users</option>
			<option value="2">Private</option>
		</param>
		<param name="access_countryresident" type="list" default="0" label="Country of Residence" description="Show/Hide the user country of residence">
			<option value="0">Public</option>
			<option value="1">Registered users</option>
			<option value="2">Private</option>
		</param>
		<param name="access_gender" type="list" default="0" label="Gender" description="Show/Hide the user gender">
			<option value="0">Public</option>
			<option value="1">Registered users</option>
			<option value="2">Private</option>
		</param>
		<param name="access_race" type="list" default="2" label="Race" description="Show/Hide the user race">
			<option value="0">Public</option>
			<option value="1">Registered users</option>
			<option value="2">Private</option>
		</param>
		<param name="access_hispanic" type="list" default="2" label="Hispanic" description="Show/Hide the user hispanic heritage">
			<option value="0">Public</option>
			<option value="1">Registered users</option>
			<option value="2">Private</option>
		</param>
		<param name="access_disability" type="list" default="2" label="Disability" description="Show/Hide the user disability">
			<option value="0">Public</option>
			<option value="1">Registered users</option>
			<option value="2">Private</option>
		</param>
		<param name="access_optin" type="list" default="2" label="E-mail Updates" description="Show/Hide if the user has elected to receive updates or newsletters by email">
			<option value="0">Public</option>
			<option value="1">Registered users</option>
			<option value="2">Private</option>
		</param>
	</params>
</install>
