<extension version="1.5" type="plugin" group="hubzero">
	<name>HUBzero - Wiki Parser</name>
	<author>Shawn Rice</author>
	<copyright>Copyright 2005-2010 by Purdue Research Foundation, West Lafayette, IN 47906</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GPLv2</license>
	<description>Loads a wiki parser and performs any called actions on text passed to it</description>
	<files>
		<filename plugin="wikiparser">wikiparser.php</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.plg_hubzero_wikiparser.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="display_limit" type="text" size="5" default="50" label="Display Limit" description="Number of items to return"/>
			</fieldset>
		</fields>
	</config>
</extension>