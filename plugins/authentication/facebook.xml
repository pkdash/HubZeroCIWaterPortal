<install version="1.5" type="plugin"  group="authentication">
	<name>Authentication - Facebook via OAuth</name>
	<author>Sam Wilson</author>
	<creationDate>February 2012</creationDate>
	<copyright>Copyright (C) 2011 Purdue University.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>hubzero@hubzero.org</authorEmail>
	<authorUrl>hubzero.org</authorUrl>
	<version>1.5</version>
	<description>Handles user authentication via Facebook using the OAuth protocol</description>
	<files>
		<filename plugin="facebook">facebook.php</filename>
	</files>
	<params>
		<param name="app_id"       type="text" size="20" label="App ID"          description="Your Hub's Facebook App ID" />
		<param name="app_secret"   type="text" size="32" label="Consumer Secret" description="Consumer Secret provided when your hub is registered on Facebook" />
		<param name="display_name" type="text" size="32" label="Display name"    description="Text to display on the site when referencing this plugin" default="Facebook" />
	</params>
</install>
