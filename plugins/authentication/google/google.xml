<extension version="1.7" type="plugin" group="authentication">
	<name>Authentication - Google</name>
	<author>Sam Wilson</author>
	<creationDate>March 2012</creationDate>
	<copyright>Copyright (C) 2008-2010 Purdue University.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>hubzero@hubzero.org</authorEmail>
	<authorUrl>hubzero.org</authorUrl>
	<version>1.7</version>
	<description>Handles user authentication against Google</description>
	<files>
		<filename plugin="google.php">google.php</filename>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="app_id"       type="text" size="20" label="App ID"          description="Your Hub's Google App ID" />
				<field name="app_secret"   type="text" size="32" label="Consumer Secret" description="Consumer Secret provided when your hub is registered on Google" />
				<field name="display_name" type="text" size="32" label="Display name"    description="Text to display on the site when referencing this plugin" default="Google" />
			</fieldset
		</fields>
	</config>
</extension>