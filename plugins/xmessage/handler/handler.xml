<extension version="1.7" type="plugin" group="xmessage">
	<name>XMessage - Handler</name>
	<description>Enables system messages</description>
	<files>
		<filename plugin="handler">handler.php</filename>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="time_limit" type="text" size="15" default="30" label="Time Limit (seconds)" description="The waiting period, in seconds, between non-system messages"/>
				<field name="daily_limit" type="text" size="10" default="100" label="Daily Limit" description="The daily limit that non-system messages can be sent"/>
			</fieldset>
		</fields>
	</config>
</extension>

