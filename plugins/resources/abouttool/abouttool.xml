<extension version="1.7" type="plugin" group="resources">
	<name>Resource - About (tool)</name>
	<author>Shawn Rice</author>
	<copyright>Copyright 2005-2011 Purdue University. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/lgpl-3.0.html LGPLv3</license>
	<description>Displays about information for a tool resource</description>
	<files>
		<filename plugin="abouttool">abouttool.php</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.plg_resources_abouttool.ini</language>
	</languages>
	<config>
		<fields name="params">
			<field name="badges" type="radio" default="0" label="Show User Badges" description="Show User Badges">
				<option value="0">No</option>
				<option value="1">Yes</option>
			</field>
		</fields>
	</config>
</extension>
